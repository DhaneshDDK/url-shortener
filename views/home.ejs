<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <% if (locals.shortURL) { %>
           <p>Generated url : <%= shortURL %> </p>
    <% } %>
    <div>
        <form method="post" action="/api/url/">
             <label for="url">Enter your URL</label>
             <input type="text" placeholder="https://example.com" name="url" id="url"/>
             <button type="submit"> Generate </button>
        </form>

        
        <div>
            <% if (locals.allUrls) { %>
                
                <table>

                    <thead>
                        <th>S.No</th>
                        <th>ShortId</th>
                        <th>Redirect URL</th>
                        <th>No of clicks</th>
                    </thead>

                    <tbody>
                        <% allUrls.forEach((element, index )=> { %>
                             <tr>
                                <td><%= index+1 %></td>
                                <td><%= element.shortId %></td>
                                <td><%= element.redirectUrl  %></td>
                                <td><%= element.visitHistory.length %></td>
                             </tr>
                               
                        <% }) %>
                    </tbody>

                </table>

            <% } %>
        </div>

    </div>
</body>
</html>